<h1>Ironhack Cinema</h1>
<p>Click on the movie to check the showtimes</p>
<div class=" container ">
    <div class="row">

        {{#each movies}}
        <div class="col-3">

            <div class="card" style="width: 18rem;">
                <a href="/movie/{{id}}">
                    <img src="{{image}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <a href="#">See more</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>
</div>